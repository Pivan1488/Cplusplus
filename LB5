//Завдання 1
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double x, y;

    cout << "function calculation y = x^5 + 1.5*x - sin(5)\n";

    for (int i = 1; i <= 5; i++) {
        cout << "enter the value x #" << i << ": ";
        cin >> x;

        y = pow(x, 5) + 1.5 * x - sin(5);

        cout << "y = " << y << "\n\n";
    }

    return 0;
}

//Завдання 2
#include <iostream>
using namespace std;

int main() {

    int n;
    long long product = 1;   // добуток може бути великим

    cout << "Enter 10 natural numbers:\n";

    for (int i = 1; i <= 10; i++) {
        cout << "Enter number #" << i << ": ";
        cin >> n;

        product *= n;
    }

    cout << "\nProduct of the entered numbers = " << product << endl;

    return 0;
}

//Завдання 3 
#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main() {
    double a, b, h, x, y;

    cout << "Enter a: ";
    cin >> a;

    cout << "Enter b: ";
    cin >> b;

    cout << "Enter step h: ";
    cin >> h;

    x = a;

    cout << "-------------------------\n";
    cout << "|    X     |     Y      |\n";
    cout << "-------------------------\n";

    while (x <= b) {

        // перевірка ОДЗ: cos(x) + sin(x) >= 0
        if (cos(x) + sin(x) < 0) {
            cout << "\nError: x = " << x << " does not belong to the domain.\n";
            break;
        }

        y = sqrt(cos(x) + sin(x));

        cout << "| " << setw(8) << x << " | " << setw(10) << y << " |\n";

        x += h;
    }

    cout << "-------------------------\n";

    return 0;
}

